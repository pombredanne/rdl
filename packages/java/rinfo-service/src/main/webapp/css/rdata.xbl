<?xml version="1.0"?>
<xbl:bindings xmlns:xbl="http://www.mozilla.org/xbl">
  <xbl:binding id="link">
    <xbl:implementation>
      <xbl:constructor>
        this.setAttributeNS("http://www.w3.org/1999/xlink", "xlink:type", "simple");
        this.setAttributeNS("http://www.w3.org/1999/xlink", "xlink:actuate", "onRequest");
        this.setAttributeNS("http://www.w3.org/1999/xlink", "xlink:href", this.getAttribute('href'));
      </xbl:constructor>
    </xbl:implementation>
  </xbl:binding>
  <xbl:binding id="src">
    <xbl:implementation>
      <xbl:constructor>
        this.setAttributeNS("http://www.w3.org/1999/xlink", "xlink:type", "simple");
        this.setAttributeNS("http://www.w3.org/1999/xlink", "xlink:actuate", "onRequest");
        this.setAttributeNS("http://www.w3.org/1999/xlink", "xlink:href", this.getAttribute('src'));
      </xbl:constructor>
    </xbl:implementation>
  </xbl:binding>
</xbl:bindings>
