{
  "analysis": {
    "filter": {
      "ids": {
        "type": "pattern_capture",
        "preserve_original": 1,
        "patterns": [
          "((?:\\d{1,4}(?:\\:\\d{1,}|\\s(?:s|ref|nr)\\.?\\s+\\d{1,})))",
          "((?:\\w{2,3})\\s*\\d{1,4}(?:\\:\\d{1,}|\\s(?:s|ref|nr)\\.?\\s+\\d{1,}))"
        ]
      },
      "SFS_nr_id_map_back": {
        "type": "pattern_replace",
        "pattern": "(\\d{4})colon(\\d{1,})",
        "replacement": "$1:$2"
      },
      "SFS_id_map_back": {
        "type": "pattern_replace",
        "pattern": "(SFS)_(\\d{4})colon(\\d{1,})",
        "replacement": "$1 $2:$3"
      },
      "swedish_stop": {
        "type": "stop",
        "stopwords": "_swedish_"
      },
      "swedish_stemmer": {
        "type": "stemmer",
        "language": "swedish"
      },
      "malnummer_without_leading_char": {
        "type": "pattern_capture",
        "preserve_original": 1,
        "patterns": [
          "(\\d{4,}-\\d{1,})"
          ]
      },
      "malnummer_replace_hypen":{
        "type": "pattern_replace",
        "pattern": "(\\w?\\d{4,})hypen(\\d{1,})",
        "replacement": "$1-$2"
      }
    },
    "char_filter": {
      "SFS_nr_id_map": {
        "type": "pattern_replace",
        "pattern": "(\\d{4}):(\\d{1,})",
        "replacement": "$1colon$2"
      },
      "SFS_id_map": {
        "type": "pattern_replace",
        "pattern": "(SFS)\\s(\\d{4}):(\\d{1,})",
        "replacement": "$1_$2colon$3"
      },
      "break_out_malnummer": {
        "type": "pattern_replace",
        "pattern": "(\\w?\\d{4,})-(\\d{1,})(\\w*)",
        "replacement": "$1hypen$2 $3"
      }
    },
    "analyzer": {
      "identifiers": {
        "tokenizer": "keyword",
        "filter": [
          "ids",
          "lowercase",
          "unique"
        ]
      },
      "malnummer": {
        "tokenizer": "keyword",
        "filter": ["malnummer_without_leading_char","lowercase", "unique"]
      },
      "swedish_with_sfs_malnummer": {
        "tokenizer": "standard",
        "char_filter": [
          "SFS_id_map",
          "SFS_nr_id_map",
          "break_out_malnummer"
        ],
        "filter": [
          "swedish_stop",
          "swedish_stemmer",
          "SFS_id_map_back",
          "SFS_nr_id_map_back",
          "malnummer_replace_hypen",
          "malnummer_without_leading_char",
          "lowercase",
          "unique"
        ]
      }
    }
  }
}