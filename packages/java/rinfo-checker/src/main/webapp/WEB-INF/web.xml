<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         version="2.4"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <display-name>RInfo Checker</display-name>

    <context-param>
        <param-name>org.restlet.application</param-name>
        <param-value>se.lagrummet.rinfo.checker.restlet.CheckerApplication</param-value>
    </context-param>
    <context-param>
        <param-name>org.restlet.clients</param-name>
        <param-value>HTTP FILE</param-value>
    </context-param>

    <servlet>
        <servlet-name>RestServlet</servlet-name> 
        <servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>
        <!-- NOTE: The enumeration of initParameters of the Servlet will be
             copied to the "context.parameters" property of the application.
        -->
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>RestServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>

</web-app>
