      <artifactId>xalan</artifactId>
    </dependency>
    <dependency>
      <groupId>xalan</groupId>
      <artifactId>serializer</artifactId>
    </dependency>

    <dependency>
      <groupId>org.codehaus.jackson</groupId>
      <artifactId>jackson-mapper-asl</artifactId>
    </dependency>

    <dependency>
      <groupId>org.spockframework</groupId>
      <artifactId>spock-core</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.codehaus.groovy</groupId>
      <artifactId>groovy-all</artifactId>
      <!--
      <scope>test</scope>
      -->
    </dependency>

  </dependencies>

  <build>
    <plugins>

      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>generate-resources</phase>
            <goals><goal>run</goal></goals>
            <configuration>
              <tasks>
                <copy todir="${project.build.outputDirectory}/uriminter">
                    <fileset dir="${basedir}/../../../resources/base/uri_algorithm"
                             includes="*.json"/>
                </copy>
                <copy todir="${project.build.outputDirectory}/xslt">
                  <fileset file="${basedir}/../../../resources/external/xslt/grit/rdfxml-grit.xslt"/>
                </copy>
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.groovy</groupId>
        <artifactId>groovy-eclipse-compiler</artifactId>
        <extensions>true</extensions>
          <version>${greclipse.version}</version>
      </plugin>

    </plugins>
  </build>

</project>
