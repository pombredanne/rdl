    <defaultGoal>package</defaultGoal>
    
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy</id>
            <phase>package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>

                <artifactItem>
                  <groupId>org.openrdf.sesame</groupId>
                  <artifactId>sesame-http-server</artifactId>
                  <version>${sesame.version}</version>
                  <type>war</type>
                  <overWrite>true</overWrite>
                  <destFileName>openrdf-sesame.war</destFileName>
                </artifactItem>

                <artifactItem>
                  <groupId>org.openrdf.sesame</groupId>
                  <artifactId>sesame-http-workbench</artifactId>
                  <version>${sesame.version}</version>
                  <type>war</type>
                  <overWrite>true</overWrite>
                  <destFileName>sesame-workbench.war</destFileName>
                </artifactItem>

              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>
      
      <plugin>
        <groupId>org.mortbay.jetty</groupId>
        <artifactId>jetty-maven-plugin</artifactId>
        <configuration>
          <webApp>${basedir}/target/dependency/openrdf-sesame.war</webApp>
          <webAppConfig>
            <contextPath>/openrdf-sesame</contextPath>
          </webAppConfig>
          <systemProperties>
            <systemProperty>
              <name>info.aduna.platform.appdata.basedir</name>
              <value>/opt/_workapps/rinfo/aduna</value>
            </systemProperty>
          </systemProperties>
        </configuration>
      </plugin>
    </plugins>
  </build>

