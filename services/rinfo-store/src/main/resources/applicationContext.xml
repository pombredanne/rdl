<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:property-placeholder location="classpath:config.properties"/>

    <bean id="fileDepot" class="se.lagrummet.rinfo.store.depot.FileDepot" scope="singleton">
        <property name="baseUri" value="${rinfo.depotBaseUri}"/>
        <property name="baseDir" value="${rinfo.fileDepotDir}"/>
    </bean>

    <bean id="uriMinter" class="se.lagrummet.rinfo.base.URIMinter" scope="singleton">
        <property name="rinfoBaseDir" value="${rinfo.baseDir}"/>
    </bean>

</beans>
