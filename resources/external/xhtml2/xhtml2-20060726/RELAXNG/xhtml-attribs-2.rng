    <include href="xhtml-edit-attrib-2.rng"/>
  </div>

  <div>
    <x:h2>Embedding Attributes Module</x:h2>
    <include href="xhtml-embed-attrib-2.rng"/>
  </div>

  <div>
    <x:h2>Events Module</x:h2>
    <include href="xhtml-events-2.rng"/>
