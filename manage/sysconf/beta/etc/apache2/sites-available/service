<VirtualHost *:80>
    ServerName service.beta.lagrummet.se
    ServerSignature On

    DocumentRoot /var/www/
    <Directory />
        Options FollowSymLinks
        AllowOverride None
    </Directory>
    <Directory /var/www/>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride None
        Order allow,deny
        allow from all
    </Directory>

    AliasMatch ^/robots\.txt$ /var/www/robots.txt
    
    ProxyPass /sesame-workbench/ ajp://localhost:8009/sesame-workbench/
    ProxyPassReverse /sesame-workbench/ ajp://localhost:8009/sesame-workbench/

    ProxyPass / ajp://localhost:8009/rinfo-service/
    ProxyPassReverse / ajp://localhost:8009/rinfo-service/

    ServerAdmin rinfo@lagrummet.se

    ErrorLog /var/log/apache2/error.log
    LogLevel warn
    CustomLog /var/log/apache2/access.log combined

</VirtualHost>
